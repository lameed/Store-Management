= form_for @part_line_item do |f|
  - if @part_line_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@part_line_item.errors.count, "error")} prohibited this part_line_item from being saved:"
      %ul
        - @part_line_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :part_id
    = f.number_field :part_id
  .field
    = f.label :part_request_id
    = f.text_field :part_request_id
  .actions
    = f.submit 'Save'
